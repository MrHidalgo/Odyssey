// HEADER :: START

header#header.header

	.c-grid-fluid

		.header__wrapper
			.header__wrapper-left

				.logo.logo--header
					a.logo__btn(href="/")
						img.logo__img(src="img/logo.svg" alt="")

				+hamburger('spring')

			.header__mobile(mobile-block-js)

				.header__wrapper-middle

					ul.header__nav
						li.header__nav-item
							a.header__nav-link(href="/product.html" class!= (pageClassName === 'p-product')?'is-active':'')
								span Product
						li.header__nav-item
							a.header__nav-link(href="/solutions.html" class!= (pageClassName === 'p-solutions')?'is-active':'')
								span Solutions
						li.header__nav-item
							a.header__nav-link(href="#")
								span Partners
						li.header__nav-item
							a.header__nav-link(href="#")
								span Company
						li.header__nav-item
							a.header__nav-link(href="/contacts.html" class!= (pageClassName === 'p-contacts')?'is-active':'')
								span Contact us

				.header__wrapper-right

					.c-btn__wrapper
						a.c-btn(href="#")
							span Book a demo



// HEADER :: END
